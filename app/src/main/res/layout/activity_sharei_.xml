<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".OghatSharei.Sharei_Activity">
    <ImageView android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginBottom="20dp"
               android:src="@drawable/sunrise1"
               android:id="@+id/imgCurrentTime"/>
    <EditText android:layout_width="match_parent" android:layout_margin="10dp" android:hint="نام کشور"
              android:layout_height="wrap_content" android:id="@+id/EdtCountry"/>
    <EditText android:layout_width="match_parent" android:hint="نام شهر" android:layout_margin="10dp"
              android:layout_height="wrap_content" android:id="@+id/EdtCity"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="نمایش"
            android:id="@+id/btnSubmit"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_gravity="center" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="70dp" android:layout_height="100dp"
                       android:src="@drawable/ic_weather_sunset_up_black_48dp"/>
            <TextView android:layout_width="wrap_content" android:layout_gravity="center"
                      android:layout_height="wrap_content" android:id="@+id/lblsunrise"
                      android:text="طلوع" android:layout_marginLeft="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:id="@+id/txtsunrise" android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"
                      android:layout_marginTop="20dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="70dp" android:layout_height="100dp"
                       android:src="@drawable/ic_weather_sunset_down_black_36dp"/>
            <TextView android:layout_width="wrap_content" android:layout_marginLeft="5dp"
                      android:layout_height="wrap_content" android:id="@+id/lblsunset"
                      android:text="غروب"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp" android:id="@+id/txtsunset"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/lblmaghrib"
              android:text="مغرب"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtmaghrib"/>

</LinearLayout>